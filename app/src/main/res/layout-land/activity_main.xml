<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homePage_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/identifyCarMake_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="64dp"
        android:width="280dp"
        android:height="100dp"
        android:text="@string/identify_the_car_make_button_text"
        android:onClick="launch_IdentifyCarMakeGameActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hints_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:width="280dp"
        android:height="100dp"
        android:text="@string/hints_button_text"
        android:onClick="launch_HintsGameActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/identifyCarImage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:width="280dp"
        android:height="100dp"
        android:text="@string/identify_the_car_image_button_text"
        android:onClick="launch_IdentifyCarImageGameActivity"
        app:layout_constraintBaseline_toBaselineOf="@+id/advancedLevel_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/advancedLevel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="91dp"
        android:width="280dp"
        android:height="100dp"
        android:text="@string/advanced_level_button_text"
        android:onClick="launch_AdvancedLevelGameActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hints_button" />
</androidx.constraintlayout.widget.ConstraintLayout>